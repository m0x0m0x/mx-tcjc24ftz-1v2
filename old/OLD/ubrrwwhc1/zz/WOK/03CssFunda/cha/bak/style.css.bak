.container {
  width: 700px;
  margin: auto;
  border: 5px solid #ff10e3;
}

body {
  font-family: sans-serif;
  background-color: antiquewhite;
  line-height: 1.3;
}

h1 {
  text-align: center;
  background-color: rgb(243, 200, 145);
}

h1,
h2,
h3 {
  text-transform: uppercase;
}

button {
  background-color: black;
  color: white;
  text-transform: uppercase;
  width: 100%;
  height: 50px;
}

.btn:hover {
  background-color: white;
  color: black;
}

ul {
  list-style: square;
}

a:link {
  color: #1098ad;
  text-decoration: none;
}
a:visited {
  color: #1098ad;
}
a:hover {
  color: orangered;
  font-weight: bold;
  text-decoration: underline orangered;
}
a:active {
  background-color: black;
  font-style: italic;
}
